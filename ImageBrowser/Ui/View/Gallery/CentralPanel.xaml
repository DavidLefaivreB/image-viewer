<UserControl x:Class="ImageBrowser.Ui.CentralPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:component="clr-namespace:ImageBrowser.Ui.Component"
             x:Name="root"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="scroller" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Height="{Binding ElementName=root, Path=ActualHeight}">
        <component:ThumbnailsContainer x:Name="thumbnailContainer"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Width="{Binding ElementName=root, Path=ActualWidth}" />
    </ScrollViewer>
</UserControl>